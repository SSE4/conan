set(ANDROID_NATIVE_API_LEVEL {{ conan_helper.settings("os.version") }})
{%- endif %}

{%- if conan_helper.settings("compiler.libcxx") %}
set(ANDROID_STL {{ conan_helper.settings("compiler.libcxx") }})
{%- endif %}

