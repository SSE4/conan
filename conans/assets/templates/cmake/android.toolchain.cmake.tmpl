{%- endif %}

message(STATUS "ANDROID_PLATFORM ${ANDROID_PLATFORM}")
message(STATUS "ANDROID_NATIVE_API_LEVEL ${ANDROID_NATIVE_API_LEVEL}")
message(STATUS "ANDROID_STL ${ANDROID_STL}")
